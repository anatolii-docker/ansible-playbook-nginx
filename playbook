---
- name: Install Nginx
  hosts: all
  become: yes

  vars:
      source_file:
      destin_file:

  tasks:
  - name: Install Nginx
    apt: name=nginx state=latest

  - name: Copy MyHomePag to Server
    copy: src={{source_file}} dest={{destin_file}} mode=0555

  - name: Start WebServer and make it enable on boot
    service: name=nginx state=started enable=yes
